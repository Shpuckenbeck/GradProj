@model IEnumerable<Grad.Models.Article>

@{
    ViewData["Title"] = "Статьи";
}

<h2>Статьи</h2>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ArtName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ArtDescr)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deadline)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArtName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtDescr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                <a asp-area="" asp-route-id="@item.ArticleID" asp-controller="Authors" asp-action="Add">Назначить авторов</a> |
                <a asp-action="Edit" asp-route-id="@item.ArticleID">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.ArticleID">Подробно</a> |
                <a asp-action="Write" asp-route-id="@item.ArticleID">Писать</a> |
                <a asp-action="Unblock" asp-route-id="@item.ArticleID">Разблокировать</a> |
                <a asp-action="Delete" asp-route-id="@item.ArticleID">Удалить</a> 
            </td>
        </tr>
}
    </tbody>
</table>
