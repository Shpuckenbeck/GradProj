@model IEnumerable<Grad.Models.Status>

@{
    ViewData["Title"] = "Статусы";
}

<h2>Статусы</h2>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StatusName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StatusName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StatusId">Изменить</a> |
                <a asp-action="Delete" asp-route-id="@item.StatusId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
