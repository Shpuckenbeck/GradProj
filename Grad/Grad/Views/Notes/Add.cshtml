@model Grad.Models.Note

@{
    ViewData["Title"] = "Замечание";
}

<h2>Добавить</h2>

<form asp-action="Add">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ArticleId" />
        <div class="form-group">
            <label asp-for="NoteDescr" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NoteDescr" class="form-control" />
                <span asp-validation-for="NoteDescr" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NoteDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NoteDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="NoteDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Выйти</a>
</div>



