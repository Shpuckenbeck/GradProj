@model Grad.Models.Note

@{
    ViewData["Title"] = "Замечания";
}

<h2>Изменить</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="NoteId" />
        <div class="form-group">
            <label asp-for="ArticleId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="ArticleId" class="form-control" asp-items="ViewBag.ArticleId"></select>
                <span asp-validation-for="ArticleId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NoteDescr" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NoteDescr" class="form-control" />
                <span asp-validation-for="NoteDescr" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NoteDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NoteDate" class="form-control" />
                <span asp-validation-for="NoteDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Fixed" />
                    <label asp-for="Fixed"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Checked" />
                    <label asp-for="Checked"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Назад</a>
</div>

